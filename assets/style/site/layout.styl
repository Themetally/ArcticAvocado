body
	background-color: #f5f5f5

.site
	display: grid
	grid-template-columns: 5vw 7fr 2fr 5vw
	grid-gap: 2rem

	grid-template-areas:  "header header header header"   ". content content . "   "footer footer footer footer"

	.has-sidebar &
		grid-template-areas:  "header header header header"   ". content sidebar . "   "footer footer footer footer"

	.full-width &
		grid-template-areas:  "header header header header"   "content content content content "   "footer footer footer footer"

	.has-sidebar.full-width &
		grid-template-areas:  "header header header header"   "content content content sidebar"   "footer footer footer footer"

	@media $portable
		display: block

		.site-content
			max-width: 90vw
			margin-left: auto
			margin-right: auto

.site-header
	grid-area: header

.site-content
	grid-area: content

	/* fallback when there is no grid supprot */
	max-width: 60rem
	margin-left: auto
	margin-right: auto

	/* When grid is suported, remove max-width */
	+hasgrid()
		max-width: unset

	.full-width &
		max-width: 96%
		max-width: calc(100vw - 2gr)
		margin-left: auto
		margin-right: auto

.site-footer
	grid-area: footer

.site-sidebar
	grid-area: sidebar


