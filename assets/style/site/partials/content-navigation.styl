/*--------------------------------------------------------------
 *## Content Navigation
 *-------------------------------------------------------------- */
.comment-navigation,
.posts-navigation,
.post-navigation,
.paging-navigation
	max-width: $content_width
	margin-left: auto
	margin-right: auto
	font-size: 0sx
	margin-bottom: 3gr

	.nav-links
		display: flex
		justify-content: center

	.nav-links > div
		flex: 1
		background-color: $white
		border-radius: 2px
		position: relative
		padding: 1gr
		min-width: 12rem

		.layout--grid
			text-align: center

	.nav-previous
		margin-right: 1gr

	.nav-next
		text-align: right

	.nav-links span
		display: block
		font-weight: 500
		font-family: $font_alt

	/* This makes the a element cover the parent div */
	.nav-links a::after
		content: ""
		position: absolute
		top: 0
		left: 0
		height: 100%
		width: 100%
