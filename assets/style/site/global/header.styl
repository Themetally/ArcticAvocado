/*--------------------------------------------------------------
 *## Header
 *-------------------------------------------------------------- */
.site-header
	position: relative
	background-color: $white
	width: 100%
	margin-bottom: 2gr
	.site-header__inner
		padding: 2gr 0

		@media $lap
			display: flex
			justify-content: space-between
			align-items: center

@media $palm
	.site-branding
		margin-bottom: 1gr




.custom-logo-link
	display: block
	margin-right: .5gr

	img
		display: block
		height: 95px
		width: auto

.site-name
	margin: 0
	padding: 0
	font-size: 3sx
	line-height: auto
	font-weight: 700


.site-description
	font-size: 0sx
	line-height: auto