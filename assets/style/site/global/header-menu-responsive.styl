.site-menu .site-menu-toggle
	display: none

@media $portable
	.site-menu__inner
		layer(menu)
		position: fixed
		background-color: $white
		padding: 1gr
		right: 0
		top: 0
		width: 100%
		height: 100vh
		overflow-y: scroll

		display: none

		&.is-open, &.is-open .menu > ul
			display: block


	.site-menu
		clear: both
		.menu
			font-size: 1sx
			font-weight: 700


		.menu > ul
			max-width: 20rem
			margin-left: auto
			margin-right: auto

		.sub-menu
			font-size: 0sx
			font-weight: 400

		.sub-menu .sub-menu
			padding-left: 1gr
			padding-top: 0

		ul
			padding-top: 1gr
			padding-left: 0

			li
				position: relative
				margin: 0 1px 0px 0

				&:hover > ul,
				&:focus > ul
					left: auto

		a
			display: inline-block
			width: 100%
			padding: .25gr 0
			text-decoration: none

		.menu-item-has-children
			min-width: 14rem

		.site-menu-toggle
			margin-left: auto
			margin-right: auto
			display: block



	.site-menu-toggle--close
		background-color: $gray_light
