@media $desk
	.site-menu
		.menu
			display: flex
			flex-wrap: wrap

		ul
			padding: 0

		/* Top level items */
		.menu > .menu-item
			margin-right: 1gr


		/*
			Dropdowns
		 */
		.menu-item-has-children
			position: relative

		.sub-menu
			a
				padding: .5gr

		/* Sub-menus Level: 1 */
		.menu > li > .sub-menu
			layer(menu)
			position: absolute
			min-width: 15rem
			top: 2gr
			left: 0

			background-color: $white
			border-top: 4px solid $black
			box-shadow: 0px 3px 6px 2px rgba(36, 36, 36, 0.13)

		/* Deeper sub-menus */
		.sub-menu .sub-menu
			margin-left: 1rem
			border-left: 1px solid $bright
			margin-bottom: .5gr


