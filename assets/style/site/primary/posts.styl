// theme-check requries sticky styles
.sticky
	background-color: transparentify($bright, 0.02)
	padding: 1gr

.blog .post
	padding-bottom: 3gr
	margin-bottom: 3gr

	.read-more
		text-transform: uppercase
		font-weight: 700
		font-family: $font_alt

	.wp-post-image
		width: 100%



	//@TODO:
	// align footer to bottom
	.entry-summary
		display: flex
		flex-direction: column

+hasgrid()
	.blog .site-content
		display: grid
		grid-gap: 1gr
		align-content: start

		grid-template-columns: 1fr 1fr
		@media $desk
			grid-template-columns: repeat( auto-fill, minmax(320px, 1fr) )

		@media $palm
			display: block
	.blog
		.entry-title
			font-size: 1sx
			line-height: auto
		.post
			background-color: $white
			padding: 1gr
			margin: 0
			border-bottom: 4px solid $text_color

		.post:first-child
			grid-column: 1 / -1
			display: grid
			grid-column-gap: 1gr
			grid-template-columns: 5fr minmax(15rem, 2fr)
			grid-template-rows: 2gr 12rem minmax(8rem, 1fr)

			@media $large_desk
				grid-column: span 3
			@media $lap
				grid-template-rows: 2gr 15rem minmax(4rem, 1fr)
			@media $palm
				display: block

			.entry-header
				grid-column: 1
				grid-row: 1 / -1
				display: flex
				flex-direction: column
				img
					margin: 0
					object-fit: cover
					flex: 1

			.entry-summary
				grid-column: 2
				grid-row: 2
				margin: 0

			.entry-footer
				grid-column: 2
				grid-row: 3
				margin: 0


